{
  "name": "passwoid",
  "version": "6.0.3",
  "description": "A reasonably secure password generator",
  "keywords": [
    "random",
    "password"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "pretest": "eslint .",
    "release": "standard-version",
    "test": "jest"
  },
  "author": {
    "name": "Mark Cornick",
    "email": "mark@markcornick.com",
    "url": "https://markcornick.com/"
  },
  "license": "Apache-2.0",
  "files": [
    "bin.js",
    "lib"
  ],
  "main": "lib/index.js",
  "bin": {
    "passwoid": "bin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markcornick/passwoid.git"
  },
  "bugs": {
    "url": "https://github.com/markcornick/passwoid/issues"
  },
  "homepage": "https://github.com/markcornick/passwoid",
  "devDependencies": {
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^4.2.1",
    "lodash.uniq": "^4.5.0",
    "mock-utf8-stream": "^0.1.1",
    "prettier": "^1.7.0",
    "standard-version": "^4.4.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "extends": [
      "xo",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "printWidth": 90,
          "singleQuote": true
        }
      ]
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
